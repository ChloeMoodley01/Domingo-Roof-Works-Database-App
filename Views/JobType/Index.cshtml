@model IEnumerable<DomingoApp.Models.JobTypeInformation>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@**This is goting to display all the customer information in a table on the index page*@
@*  (W3schools, 2021) and //(4. Continuation and close off, 2021) *@
<html>
<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 10px;
        }
    </style>
</head>


<body>
    <h1 style="text-shadow: 8px 8px 5px #FA8072; font-family:Arial">Job Type Index</h1>
    <p>In the table below you can view all the job type that are in the database, as well as their details.</p>

    <table style="width:50%">
        <tr>
            <th>Job Type Name</th>
            <th>Daily Rate</th>
            <th>Update</th>
        </tr>

        @foreach (var jobTypeInfo in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => jobTypeInfo.JobTypeName)</td>
                <td>@Html.DisplayFor(modelItem => jobTypeInfo.DailyRate)</td>
                <td>
                    <a asp-action="Update" asp-route-id="@jobTypeInfo.JobTypeName" class="btn btn-info">Update</a>
                </td>
            </tr>
        }
    </table>

    <style>
        .butt {
            color: #FA8072;
        }
    </style>

    <div>
        <a class="butt" asp-area="" asp-controller="Home" asp-action="Index">Back to Home Page</a>
    </div>

</body>
</html>


