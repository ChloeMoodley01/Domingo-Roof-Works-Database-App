@model DomingoApp.Models.EmployeeInformation
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*  (W3schools, 2021) and //(4. Continuation and close off, 2021) *@
<html>
<body>
    <div class="container" style="padding-top:5%">
        <div class="row">
            <div class="col-md-12">
                <div style="background-color: ghostwhite">
                    <h1 class="text-center">Create a New Employee</h1>
                    <p class="text-center">Please fill out all the following information in the textboxs below. All information is required.</p>
                    <div class="col-md-6">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="EmployeeID" class="control-label-">Please Enter the Employee's ID</label>
                                <input asp-for="EmployeeID" class="form-control" />
                                <span asp-validation-for="EmployeeID" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="EmployeeName" class="control-label-">Please Enter the Employee's Name</label>
                                <input asp-for="EmployeeName" class="form-control" />
                                <span asp-validation-for="EmployeeName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="EmployeeSurname" class="control-label">Please Enter the Employee's Surname</label>
                                <input asp-for="EmployeeSurname" class="form-control" />
                                <span asp-validation-for="EmployeeSurname" class="text-danger"></span>
                            </div>

                            <p>  </p>
                            <div class="form-group">
                                <input type="submit" value="Create Employee" class="btn btn-outline-success" />
                            </div>
                        </form>

                        @* In-text referencing here, list refererncing is in the pdf *@
                        @* Figure 3: Commbox. [2021]. Employee Icon. (Commbox, 2021)) *@
                        <img src="https://www.commbox.io/wp-content/uploads/2019/10/32-1-1024x597.jpg" alt="User Image" style="width:200px; height:200px; position:fixed; top:45%; right:25%" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <p> </p>
    <div>
        <style>
            .butt {
                color: #FA8072;
            }
        </style>
        <a class="butt" asp-action="Index">Back to list</a>
    </div>

</body>
</html>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

