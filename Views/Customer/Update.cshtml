@model DomingoApp.Models.CustomerInformation
@{
    ViewData["Title"] = "Update";
}

@*  (W3schools, 2021) and //(4. Continuation and close off, 2021) *@
<html>
<body>
    <div class="container" style="padding-top:5%">
        <div class="row">
            <div class="col-md-12">
                <div style="background-color: ghostwhite">
                    <h1 class="text-center">Update Customer</h1>
                    <p class="text-center">Please update any information in the textbox that are provided.</p>
                    <div class="col-md-6">
                        <form asp-action="Update">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CustomerID" />

                            <div class="form-group">
                                <label asp-for="CustomerName" class="control-label-">Please Enter the Customer's Name</label>
                                <input asp-for="CustomerName" class="form-control" />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CustomerSurname" class="control-label">Please Enter the Customer's Surname</label>
                                <input asp-for="CustomerSurname" class="form-control" />
                                <span asp-validation-for="CustomerSurname" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CustomerAddress" class="control-label">Please Enter the Customer's Address</label>
                                <input asp-for="CustomerAddress" class="form-control" />
                                <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                            </div>

                            <p> </p>
                            <div class="form-group">
                                <input type="submit" value="Update Customer" class="btn btn-outline-info" />
                            </div>
                        </form>

                        @* In-text referencing here, list refererncing is in the pdf *@
                        @* Figure 9: Network. [2011]. Update Icon. (Network, 2021) *@
                        <img src="data:image/png;base64,"
                             alt="User Image" style="width:200px; height:200px; position:fixed; top:45%; right:25%" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <p> </p>
    <div>
        <style>
            .butt {
                color: #FA8072;
            }
        </style>
        <a class="butt" asp-action="Index">Back to list</a>
    </div>

</body>
</html>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

