@model DomingoApp.Models.JobInformation
@{
    ViewData["Title"] = "Create";
}

@*  (W3schools, 2021) and //(4. Continuation and close off, 2021) *@
<html>
<body>
    <div class="container" style="padding-top:5%">
        <div class="row">
            <div class="col-md-12">
                <div style="background-color: ghostwhite">
                    <h1 class="text-center">Create a New Job</h1>
                    <p class="text-center">Please fill out all the following information in the textboxs below. All information is required.</p>
                    <div class="col-md-6">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="JobCardNo" class="control-label-">Please Enter the Job Card Number</label>
                                <input asp-for="JobCardNo" class="form-control" />
                                <span asp-validation-for="JobCardNo" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NumOfDays" class="control-label">Please Enter the Number of Days</label>
                                <input asp-for="NumOfDays" class="form-control" />
                                <span asp-validation-for="NumOfDays" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Create Job" class="btn btn-outline-success" />
                            </div>
                        </form>

                        @* In-text referencing here, list refererncing is in the pdf *@
                        @* Figure 5: Shutterstock. [2021]. Job Icon. (Shutterstock, 2021)) *@
                        <img src="https://image.shutterstock.com/image-vector/receipt-paper-cartoon-vector-illustration-260nw-666048871.jpg" alt="User Image" style="width:200px; height:200px; position:fixed; top:40%; right:25%" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <p> </p>
    <div>
        <style>
            .butt {
                color: #FA8072;
            }
        </style>
        <a class="butt" asp-action="Index">Back to list</a>
    </div>

</body>
</html>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

