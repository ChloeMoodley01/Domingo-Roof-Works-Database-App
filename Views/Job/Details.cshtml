@model DomingoApp.Models.JobInformation
@{
    ViewData["Title"] = "Details";
}

@*  (W3schools, 2021) and //(4. Continuation and close off, 2021) *@
<html>
<body>
    <div class="container" style="padding-top:5%">
        <div class="row">
            <div class="col-md-12">
                <div style="background-color: ghostwhite">
                    <h1 class="text-center">Job Details</h1>
                    <p class="text-center">If you look below, you can see the Job Card Number and Number of Days.</p>
                    <div class="col-md-6">
                        <ul>
                            <li><b><text>JobCardNo: </text></b>@Html.DisplayFor(Model => Model.JobCardNo)</li>
                            <li><b><text>Number Of Days: </text></b>@Html.DisplayFor(Model => Model.NumOfDays)</li>
                        </ul>

                        <p> </p>
                        <div>
                            <a asp-action="Update" asp-route-id="@Model.JobCardNo" class="btn btn-outline-info">Update</a>
                        </div>

                        @* In-text referencing here, list refererncing is in the pdf *@
                        @* Figure 8: Icon-library. [2018]. Details Icon. (Icon-library, 2018) *@
                        <img src="data:image/png;base64,"
                             alt="User Image" style="width:100px; height:100px; position:fixed; top:40%; right:30%" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <p> </p>
    <div>
        <style>
            .butt {
                color: #FA8072;
            }
        </style>
        <a class="butt" asp-action="Index">Back to list</a>
    </div>

</body>
</html>
